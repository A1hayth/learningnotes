{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-32bit",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-m32",
                "-g",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}